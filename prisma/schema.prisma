datasource db {
    // You can edit provider
    // provider = "mysql"
    // provider = "postgresql"
    // provider = "sqlserver"
    // provider = "mongo"
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model hideMessage {
    id           String @id @unique @default(uuid())
    // see https://core.telegram.org/bots/api#inlinequery
    // inlineId      String @unique
    user_id      BigInt
    text         String @default("")
    count        Int    @default(0)
    max_count    Int    @default(0)
    status       Int    @default(0)
    // 2038 Â¿
    time         BigInt
    expired_time BigInt @default(0)
}

// message mode support
// don't need gc
// need text(or text placeholders)
model normalMessage {
    id           String @id @unique @default(uuid())
    user_id      BigInt
    message_id   BigInt
    text         String @default("") // or caption
    time         BigInt
}
model userSetting {
    user_id           BigInt @unique
    hide_placeholders String @default("")
    hide_mode         Int    @default(1)
    disabled          String @default("")
}
